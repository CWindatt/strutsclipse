<?eclipse version="3.4"?>
<plugin>
    <extension
        point="org.eclipse.wst.sse.ui.completionProposal">
        <proposalCategory
            id="com.amashchenko.eclipse.strutsclipse.completionProposal"
            name="Struts XML Proposals">
        </proposalCategory>

        <proposalComputer
            activate="true"
            categoryId="com.amashchenko.eclipse.strutsclipse.completionProposal"
            class="com.amashchenko.eclipse.strutsclipse.StrutsXmlCompletionProposalComputer"
            id="com.amashchenko.eclipse.strutsclipse.proposalComputer">
            <contentType id="org.eclipse.core.runtime.xml"/>
        </proposalComputer>
    </extension>

    <extension point="org.eclipse.wst.sse.ui.editorConfiguration">
        <quickOutlineConfiguration
            target="org.eclipse.wst.xml.ui.internal.tabletree.XMLMultiPageEditorPart"
            class="com.amashchenko.eclipse.strutsclipse.StrutsXmlQuickOutlineConf">
        </quickOutlineConfiguration>
    </extension>

    <extension
        point="org.eclipse.ui.workbench.texteditor.hyperlinkDetectors">
        <hyperlinkDetector
            activate="true"
            class="com.amashchenko.eclipse.strutsclipse.StrutsXmlHyperlinkDetector"
            id="com.amashchenko.eclipse.strutsclipse.hyperlinkDetector"
            name="Struts XML"
            targetId="org.eclipse.core.runtime.xml">
        </hyperlinkDetector>
    </extension>
</plugin>
